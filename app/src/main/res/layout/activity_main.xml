<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context="com.warm.encryptdemo.MainActivity">

            <EditText
                android:id="@+id/etContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入需加密的内容" />

            <TextView
                android:id="@+id/tvContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="内容" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <Button
                    android:id="@+id/tvBase64Encode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Base64加密" />

                <Button
                    android:id="@+id/tvBase64Decode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Base64解密" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/tvAesEncode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aes加密" />

                <Button
                    android:id="@+id/tvAesDocode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aes解密" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/tvGenerateKey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="生成秘钥" />

                <Button
                    android:id="@+id/tvRsaEncrypt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rsa加密" />

                <Button
                    android:id="@+id/tvRsaDecode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rsa解密" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/tvGetSignature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="获取应用签名" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/tvTestTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="测试耗时" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/tvMockHttp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="模拟网络" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/tvNativeKey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NativeKey" />
            </LinearLayout>



        </LinearLayout>
    </ScrollView>
</layout>
